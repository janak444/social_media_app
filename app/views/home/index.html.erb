
<%= render "/layouts/navbar" %>
<% @posts.each do |post|%>
    <p><%= post.title%></p>
    <p>
    <% post.images.attach(params[:images]).map do |image| %>
       <%= image_tag image.representation(resize_to_limit: [300, 300])%>
    <%end%>
    </p>
    <p><%= post.content%></p>
    <h6>Comments</h6>
    <% post.comments.map do |comment|%>
    <%= comment.body%><br>
    <%end%>
<%end%>